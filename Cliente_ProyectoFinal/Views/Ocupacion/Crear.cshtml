@model Cliente_ProyectoFinal.Models.Ocupaciones.Class_Ocupaciones

@{
    ViewData["Title"] = "Crear Ocupacion";

}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style_Admin.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" /> <!-- Si usás Bootstrap -->
</head>
<body>
    <div class="form-wrapper">


        <h2>@ViewData["Title"]</h2>

        <!-- Mostrar resumen de errores -->
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <br />

        <br />
        <form method="post">
            <div class="form-group">
                <label for="habitacion_ID">habitacion ID:</label>
                <input type="number" class="form-control" id="habitacion_ID" name="habitacion_ID" required value="@Model?.habitacion_ID" />
                @Html.ValidationMessageFor(m => m.habitacion_ID, "", new { @class = "text-danger" })
            </div>
            <br />



            <div class="form-group">
                <label for="Cedula_P">Cedula:</label>
                <input type="text" class="form-control" id="Cedula_P" name="Cedula_P" required step="0.01" value="@Model?.Cedula_P" />
                @Html.ValidationMessageFor(m => m.Cedula_P, "", new { @class = "text-danger" })
            </div>
            <br />


            <div class="form-group">
                <label for="fecha_entrada">fecha entrada:</label>
                <input type="datetime-local" class="form-control" id="fecha_entrada" name="fecha_entrada" required value="@Model?.fecha_entrada" />
                @Html.ValidationMessageFor(m => m.fecha_entrada, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group">
                <label for="fecha_salida">fecha salida:</label>
                <input type="datetime-local" class="form-control" id="fecha_salida" name="fecha_salida" required value="@Model?.fecha_salida" />
                @Html.ValidationMessageFor(m => m.fecha_salida, "", new { @class = "text-danger" })
            </div>
            <br />


            <div class="form-group">

                <input type="hidden" name="uso_credito" value="false" />

                @Html.ValidationMessageFor(m => m.uso_credito, "", new { @class = "text-danger" })
            </div>
            <br />

            <div class="form-group">
                <label for="credito_ID">credito_ID:</label>
                <input type="number" class="form-control" id="credito_ID" name="credito_ID" required value="@Model?.credito_ID" />
                @Html.ValidationMessageFor(m => m.credito_ID, "", new { @class = "text-danger" })
            </div>
            <br />

            <div class="form-group">
                <label for="estado">Estado:</label>
                <select asp-for="estado" class="form-control">
                    <option value="Activo" selected="@(Model?.estado == "Activo")">Activo</option>
                    <option value="Cancelado" selected="@(Model?.estado == "Cancelado")">Cancelado</option>
                    <option value="Vencido" selected="@(Model?.estado == "Vencido")">Vencido</option>
                </select>
                @Html.ValidationMessageFor(m => m.estado, "", new { @class = "text-danger" })
            </div>
            <br />



            <button type="submit" class="btn btn-success">Agregar</button>
            <a href="@Url.Action("Index", "Credito")" class="btn btn-secondary">Cancelar</a>
        </form>

    </div>



</body>
</html>

