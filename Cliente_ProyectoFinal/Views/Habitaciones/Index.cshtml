@model IEnumerable<Cliente_ProyectoFinal.Models.Habitaciones.Class_Habitaciones>

@{
    ViewData["Title"] = "Lista de Habitaciones";
}

@{
    var successMessage = TempData["SuccessMessage"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

@{
    var SuccessDeleteMessage = TempData["SuccessDeleteMessage"] as string;
}

@if (!string.IsNullOrEmpty(SuccessDeleteMessage))
{
    <div class="alert alert-success">
        @SuccessDeleteMessage
    </div>
}
@{
    var SuccessInsertMessage = TempData["SuccessInsertMessage"] as string;
}

@if (!string.IsNullOrEmpty(SuccessInsertMessage))
{
    <div class="alert alert-success">
        @SuccessInsertMessage
    </div>
}


<!-- Aquí va el código para mostrar la lista de productos -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style_Admin.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" /> <!-- Si usás Bootstrap -->
</head>
<body>
    <div class="form-wrapper">

        <h2>@ViewData["Title"]</h2>

        <!-- Botón para crear un nuevo producto -->
        <a href="@Url.Action("Crear", "Habitaciones")" class="btn btn-success">Crear Nueva Habitacion</a>
        <br />
        <br />



        <br />
        <br />

        <div class="table-wrapper">
        <!-- Tabla para mostrar la lista de productos -->

        <table>
            <thead>
                <tr>
                    <th>Habitacion ID</th>
                    <th>numero</th>
                    <th>Tipo ID</th>
                    <th>Estado</th>
                    <th>Botones</th>




                </tr>
            </thead>
            <tbody>
                @foreach (var habi in Model)
                {
                    <tr>
                        <td>@habi.habitacion_ID</td>
                        <td>@habi.numero</td>
                        <td>@habi.tipo_ID</td>
                        <td>@habi.estado</td>




                        <td>
                            <!-- Enlaces para editar y eliminar -->
                            <a href="@Url.Action("Editar", "Habitaciones", new { id = habi.habitacion_ID })" class="btn btn-warning">Editar</a>
                                <button class="btn btn-danger" onclick="confirmarEliminacion(@habi.habitacion_ID)">Eliminar</button>

                            <!-- Botón para ver video relacionado con este producto -->

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>


    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmarEliminacion(id) {
            Swal.fire({
                title: '¿Estás segura?',
                text: "¡Esta acción no se puede deshacer!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Habitaciones/Eliminar/' + id;
                }
            });
        }
    </script>


</body>
</html>

