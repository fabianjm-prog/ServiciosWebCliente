@model List<Cliente_ProyectoFinal.Models.Usuario.class_User>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h2 class="text-center">Usuarios Registrados</h2>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Fecha Registro</th>
            <th>Fecha Nacimiento</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Cedula_P</td>
                <td>@usuario.Nombre_P</td>
                <td>@usuario.Apellido_P</td>
                <td>@usuario.Telefono_P</td>
                <td>@usuario.Correo_P</td>
                <td>@usuario.Fecha_Registro_P.ToString("yyyy-MM-dd")</td>
                <td>@usuario.Fecha_Nacimiento_P.ToString("yyyy-MM-dd")</td>
                <td>@usuario.Rol_ID</td>
            </tr>
        }
    </tbody>
</table>
