@model Cliente_ProyectoFinal.Models.MovimientoCredito.Class_MovimientoCredito

@{
    ViewData["Title"] = "Editar Movimiento";
}

<h2>@ViewData["Title"]</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<br />

<form asp-controller="Autenticacion" asp-action="Logout" method="post" style="display:inline;">
    <button type="submit" class="btn btn-danger btn-sm">Cerrar Sesión</button>
</form>

<br />

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="movimiento_ID" />

    <div class="form-group">
        <label asp-for="credito_ID">Crédito ID:</label>
        <input asp-for="credito_ID" class="form-control" />
        @Html.ValidationMessageFor(m => m.credito_ID, "", new { @class = "text-danger" })
    </div>
    <br />

    <div class="form-group">
        <label asp-for="tipo_movimiento">Tipo de Movimiento:</label>
        <select asp-for="tipo_movimiento" class="form-control">
            <option value="">-- Seleccione una opción --</option>
            @{
                var opciones = new List<string> { "Ajuste", "Pago", "Consumo", "Asignación" };
            }
            @foreach (var tipo in opciones)
            {
                <option value="@tipo" selected="@(Model.tipo_movimiento == tipo ? "selected" : null)">
                    @tipo
                </option>
            }
        </select>
        @Html.ValidationMessageFor(m => m.tipo_movimiento, "", new { @class = "text-danger" })
    </div>
    <br />

    <div class="form-group">
        <label asp-for="monto">Monto:</label>
        <input asp-for="monto" class="form-control" />
        @Html.ValidationMessageFor(m => m.monto, "", new { @class = "text-danger" })
    </div>
    <br />

    <div class="form-group">
        <label asp-for="fecha_movimiento">Fecha Movimiento:</label>
        <input asp-for="fecha_movimiento" type="datetime-local" class="form-control"
               value="@Model.fecha_movimiento?.ToString("yyyy-MM-ddTHH:mm")" />
        @Html.ValidationMessageFor(m => m.fecha_movimiento, "", new { @class = "text-danger" })
    </div>
    <br />

    <div class="form-group">
        <label asp-for="descripcion">Descripción:</label>
        <input asp-for="descripcion" class="form-control" />
        @Html.ValidationMessageFor(m => m.descripcion, "", new { @class = "text-danger" })
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("Index", "MovimientoCredito")" class="btn btn-secondary">Cancelar</a>
</form>
